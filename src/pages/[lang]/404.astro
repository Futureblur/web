---
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import NotFoundLayout from "@layouts/NotFoundLayout.astro";
import { languages, type Language } from "@i18n/ui";
import Layout from "@layouts/Layout.astro";
import { SITE } from "@consts";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export async function getStaticPaths() {
    const paths = languages.map((lang: Language) => {
        return { params: { lang: lang } };
    });

    return paths;
}
---

<Layout title="404" description={t("site.description")} cover={SITE.COVER}>
    <NotFoundLayout lang={lang} />
</Layout>
