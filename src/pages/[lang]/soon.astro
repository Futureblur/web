---
import Layout from "@layouts/Layout.astro";
import Container from "@components/Container.astro";
import BackToPrevious from "@components/News/BackToPrevious.astro";
import { HOME, SITE } from "@consts";
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import { languages } from "@i18n/ui";
import type { Language } from "@i18n/ui";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export async function getStaticPaths() {
    const paths = languages.map((lang: Language) => {
        return { params: { lang: lang } };
    });

    return paths;
}
---

<Layout title="Coming soon" description={SITE.DESCRIPTION} cover={HOME.COVER}>
    <Container>
        <div class="mt-16 grid place-items-center gap-3">
            <h4
                class="animate text-center text-2xl font-semibold text-black dark:text-white"
            >
                {t("soon.title")}
            </h4>
            <span class="animate">
                <BackToPrevious href=`/${lang}`>{t("404.back")}</BackToPrevious>
            </span>
        </div>
    </Container>
</Layout>
