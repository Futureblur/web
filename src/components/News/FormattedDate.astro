---
import { getLangFromUrl } from "@i18n/utils";

interface Props {
    date: Date;
    lang?: string;
}

let { date, lang } = Astro.props;

const language = getLangFromUrl(Astro.url);

if (!lang) {
    lang = language;
}
---

<time datetime={date.toISOString()}>
    {
        date.toLocaleDateString(lang, {
            month: "long",
            day: "numeric",
            year: "numeric",
        })
    }
</time>
